<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/css/board-style.css" />
    <link rel="stylesheet" href="/css/create-style.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="http://localhost:3000/">CPT</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav"></ul>
          <ul class="navbar-nav mx-auto">
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/online-boards"
                >자유게시판</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">재판</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/humors">유머</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">정치 토론</a>
            </li>
          </ul>
          <ul class="navbar-nav ms-auto">
            <!-- 우측에 배치하기 위해 ms-auto 사용 -->
            <li class="nav-item">
              <a class="nav-link" href="#">로그인</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <header>
      <div class="board_title">
        <% if (boardType === 'humor') { %>
          <span>유머 게시판</span>
        <% } else if (boardType === 'online') { %>
          <span>자유 게시판</span>
        <% } else if (boardType === '정치토론') { %>
          <span>정치토론 게시판</span>
        <% } else if (boardType === '재판') { %>
          <span>재판 게시판</span>
        <% } %>
      </div>
      <hr width="100%" color="black" size="2" style="margin-left: 30px" />
     
      
      <div class="container">
        <h2>게시물 생성</h2>
        <form id="postForm">
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div class="form-group">
              <label for="image">이미지 첨부</label>
              <input type="file" id="image" name="files" accept="image/*" multiple>
          </div>
            <div class="form-group">
                <label for="content">내용</label>
                
                  <textarea  cols="100" rows="10" contenteditable="true" name="content"></textarea>
                
            </div>
            <button type="submit">게시물 등록</button>
        </form>
    </div>
    </header>
<script>
  document.getElementById('postForm').addEventListener('submit', function(event) {
    // 기본 폼 제출 이벤트 방지
    event.preventDefault();

    // FormData 객체를 사용하여 폼 데이터를 쉽게 수집
    const formData = new FormData(this);
    console.log(formData);

    // fetch API를 사용하여 POST 요청
    fetch('http://localhost:3000/humors', {
      method: 'POST',
      body: formData, // 폼 데이터 전송
    })
    .then(response => response.json()) // 응답을 JSON 형태로 파싱
    .then(data => console.log(data)) // 서버 응답 출력
    .catch(error => console.error('Error:', error)); // 오류 처리
  });
</script>
  </body>
</html>
