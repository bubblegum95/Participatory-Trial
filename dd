const firebaseConfig = {
  apiKey: 'AIzaSyBWTqbSvGpltDYFulmCCCCoqDw27RCnwfw',
  authDomain: 'sparta-f770d.firebaseapp.com',
  projectId: 'sparta-f770d',
  storageBucket: 'sparta-f770d.appspot.com',
  messagingSenderId: '367531329945',
  appId: '1:367531329945:web:f6dcf37b61a32998e42b08',
  measurementId: 'G-EXWKSS1NE7',
};

firebase.initializeApp(firebaseConfig);
const messaging = firebase.messaging();

const form = document.getElementById('signinForm');

form.addEventListener('submit', (event) => {
  event.preventDefault(); // 이벤트 발생 시 새로고침 방지

  const formData = {
    email: document.getElementById('email').value,
    password: document.getElementById('password').value,
  };

  fetch('http://localhost:3000/login', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify(formData),
  })
    .then((response) => {
      if (!response.ok) {
        throw new Error('로그인에 실패했습니다.');
      }
      return response.text(); // 응답을 텍스트로 처리
    })
    .then((text) => {
      console.log(text); // "로그인에 성공하였습니다." 메시지 출력
      return requestPermission(); // 푸시 알림 권한 요청 함수 호출
    })
    .then((pushToken) => {
      console.log('푸시 토큰 획득:', pushToken);
      return sendTokenToServer(pushToken); // 서버에 푸시 토큰 등록
    })
    .then(() => {
      window.location.href = 'http://localhost:3000'; // 모든 과정이 성공하면 홈으로 이동
    })
    .catch((error) => {
      alert(error.message);
      console.error(error);
    });
});

// 푸시 토큰 가져오기
function getToken() {
  // 이미 권한이 부여되었는지 확인
  if (Notification.permission === 'granted') {
    return messaging.getToken({
      vapidKey:
        'BG_gLrVgK9prK__oUBgRMV-yHIDwz0DIv4ummhg8jj9b2uz-fcRHTF_MUdXsca8W7821RjVpiElfTwAWt9rpO1U',
    }); // VAPID 키 사용
  } else {
    return requestPermission(); // 권한 요청
  }
}

// 푸시 알림 권한 요청 및 토큰 획득 함수
function requestPermission() {
  return Notification.requestPermission().then((permission) => {
    if (permission !== 'granted') {
      throw new Error('푸시 알림 권한이 거부되었습니다.');
    }
    return messaging.getToken({
      vapidKey:
        'BG_gLrVgK9prK__oUBgRMV-yHIDwz0DIv4ummhg8jj9b2uz-fcRHTF_MUdXsca8W7821RjVpiElfTwAWt9rpO1U',
    }); // VAPID 키 사용
  });
}

// 서버에 푸시 토큰 등록 함수
function sendTokenToServer(token) {
  return fetch('/users/register-token', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ pushToken: token }),
  }).then((response) => {
    if (!response.ok) {
      return response.json().then((data) => {
        throw new Error(data.message || '푸시 토큰 등록 실패');
      });
    }
    console.log('푸시 토큰 서버 등록 성공');
  });
}

if ('serviceWorker' in navigator) {
  navigator.serviceWorker
    .register('/scripts/firebase-messaging-sw.js')
    .then(function (registration) {
      console.log('Service Worker 등록 성공:', registration.scope);
    })
    .catch(function (err) {
      console.log('Service Worker 등록 실패:', err);
    });
}
